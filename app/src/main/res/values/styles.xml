<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainMenuButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/primary_corner_radius</item>
        <item name="android:layout_marginTop">@dimen/primary_margin</item>
        <item name="android:layout_marginHorizontal">@dimen/primary_margin</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
    </style>

    <style name="SettingsTextview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/frame_height</item>
        <item name="android:paddingHorizontal">@dimen/primary_padding</item>
        <item name="android:gravity">fill</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/top_bar_height</item>
        <item name="android:layout_marginBottom">@dimen/secondary_margin</item>
        <item name="titleTextAppearance">@style/TextAppearance</item>
    </style>

    <style name="TextAppearance">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
    </style>

    <style name="SearchTint">
        <item name="android:backgroundTint">@color/light_grey</item>
    </style>

    <style name="SwitchTint">
        <item name="android:trackTint">@color/light_grey</item>
        <item name="android:thumbTint">@color/grey</item>
    </style>

    <style name="SearchActivityItemBottomText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="SearchActivityPlaceholderLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">210dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="SearchActivityPlaceholderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/primary_margin</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="SearchActivityPlaceholderImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="PlayerActivityTextView1">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlayerActivityTextView2">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">13sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PlayButton">
        <item name="android:backgroundTint">@color/black</item>
    </style>
    
    <style name="BottomNavigationView">
        <item name="itemIconTint">@color/color_selector</item>
        <item name="itemTextColor">@color/color_selector</item>
        <item name="backgroundTint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="IndicatorStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?attr/colorPrimaryVariant</item>
    </style>
    
    <style name="BottomNavigationTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:layout_marginTop">@dimen/secondary_margin</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/third_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="PlaylistViewBottomText">
        <item name="android:textSize">@dimen/fourth_text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

</resources>