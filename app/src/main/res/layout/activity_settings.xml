<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:layout_marginBottom="@dimen/secondary_margin"
        app:navigationIcon="@drawable/back_icon"
        app:title="@string/settings"
        app:titleTextColor="@color/black" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="@dimen/frame_height"
        android:paddingHorizontal="@dimen/primary_padding"
        android:text="@string/dark_theme"
        android:textSize="@dimen/secondary_text_size"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/frame_height"
        android:paddingHorizontal="@dimen/primary_padding"
        android:gravity="fill"
        android:text="@string/share"
        android:textSize="@dimen/secondary_text_size"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/share_icon"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/frame_height"
        android:paddingHorizontal="@dimen/primary_padding"
        android:gravity="fill"
        android:text="@string/support"
        android:textSize="@dimen/secondary_text_size"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/support"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/frame_height"
        android:paddingHorizontal="@dimen/primary_padding"
        android:gravity="fill"
        android:text="@string/eula"
        android:textSize="@dimen/secondary_text_size"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/eula_icon"/>

</LinearLayout>