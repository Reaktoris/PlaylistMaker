<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.ui.MainActivity"
    android:orientation="vertical"
    android:background="?attr/colorSecondary">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:paddingTop="@dimen/secondary_padding"
        android:paddingHorizontal="@dimen/primary_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="500"
            android:textSize="@dimen/primary_text_size"
            android:textColor="@color/white"/>

    </FrameLayout>

    <Button
        android:id="@+id/search_button"
        style="@style/MainMenuButton"
        android:layout_marginTop="@dimen/secondary_margin"
        android:text="@string/search"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:icon="@drawable/search_icon" />

    <Button
        android:id="@+id/media_button"
        style="@style/MainMenuButton"
        android:text="@string/media"
        app:icon="@drawable/media_icon" />

    <Button
        android:id="@+id/settings_button"
        style="@style/MainMenuButton"
        android:layout_marginBottom="@dimen/secondary_margin"
        android:text="@string/settings"
        app:icon="@drawable/settings_icon"/>

</LinearLayout>